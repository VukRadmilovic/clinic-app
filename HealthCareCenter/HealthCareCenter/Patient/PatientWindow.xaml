<Window x:Class="HealthCareCenter.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthCareCenter"
        mc:Ignorable="d"
        Title="Patient Window" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Menu HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1">
            <MenuItem x:Name="scheduleAppointmentMenuItem" Header="Schedule an appointment" />
            <MenuItem x:Name="viewAppointmentsMenuItem" Header="View all appointments" />
            <MenuItem x:Name="searchDoctorsMenuItem" Header="Seach doctors" />
            <MenuItem Header="Open survey">
                <MenuItem x:Name="doctorSurveyMenuItem" Header="About doctor" />
                <MenuItem x:Name="healthCenterSurveyMenuItem" Header="About health center" />
            </MenuItem>
        </Menu>

    </Grid>
</Window>
