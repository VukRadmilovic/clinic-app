<Window x:Class="HealthCareCenter.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthCareCenter"
        mc:Ignorable="d"
        Title="Patient Window" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="1" Grid.Column="1" >
            <MenuItem Header="Action">
                <MenuItem x:Name="myAppointmentsMenuItem" Header="View your appointments" Click="myAppointmentsMenuItem_Click" />
                <MenuItem x:Name="searchDoctorsMenuItem" Header="Search for doctor" Click="searchDoctorsMenuItem_Click" />
                <MenuItem x:Name="myNotificationMenuItem" Header="My notifications" Click="myNotificationMenuItem_Click" />
                <MenuItem x:Name="myHealthRecordMenuItem" Header="My health record" Click="myHealthRecordMenuItem_Click" />
                <MenuItem Header="Access surveys">
                    <MenuItem x:Name="doctorSurveyMenuItem" Header="Doctor" Click="doctorSurveyMenuItem_Click" />
                    <MenuItem x:Name="healthCenterMenuItem" Header="Health center" Click="healthCenterMenuItem_Click" />
                </MenuItem>
            </MenuItem>
        </Menu>
        <TextBlock x:Name="currentActionTextBlock" Grid.Row="1" Grid.Column="2" Margin="15 0 0 0" />

        <Grid x:Name="myAppointmentsGrid" Margin="0 10 0 0" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Visibility="Visible">
            <DataGrid x:Name="myAppointmentsDataGrid" AutoGenerateColumns="false" HorizontalScrollBarVisibility="Auto">
                
            </DataGrid>
        </Grid>

        <Grid x:Name="searchDoctorsGrid" Margin="0 10 0 0" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="4" Visibility="Collapsed">

        </Grid>

        <Grid x:Name="myNotificationGrid" Margin="0 10 0 0" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="4" Visibility="Collapsed">

        </Grid>

        <Grid x:Name="doctorSurveyGrid" Margin="0 10 0 0" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="4" Visibility="Collapsed">

        </Grid>

        <Grid x:Name="healthCenterGrid" Margin="0 10 0 0" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="4" Visibility="Collapsed">

        </Grid>

    </Grid>
</Window>
